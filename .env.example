# Application
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Paths (optional - defaults to project directories)
# DATA_DIR=/Users/nate/code/prove/data
# DATABASE_PATH=/Users/nate/code/prove/database/prove.db
# LOG_DIR=/Users/nate/code/prove/logs

# Audio Processing
SAMPLE_RATE=16000
MAX_UPLOAD_SIZE_MB=50
AUDIO_FORMAT=wav
NORMALIZATION_TARGET_DB=-20.0

# Quality Thresholds
MIN_SNR_DB=20.0
MIN_CONFIDENCE=0.7
MIN_SEGMENT_DURATION=2.0
MAX_SEGMENT_DURATION=15.0

# Training
TRAINING_THRESHOLD_SECONDS=60.0
MIN_NEW_DATA_SECONDS=10.0
MAX_CONCURRENT_TRAINING_JOBS=1
TRAINING_CHECK_INTERVAL_SECONDS=60
BOOTSTRAP_MIN_DURATION=6.0

# TTS Model (Chatterbox)
TTS_LANGUAGE=en
TTS_DEVICE=mps  # cpu, cuda, or mps (Apple Silicon)

# Background Tasks
TASK_CLEANUP_INTERVAL_HOURS=24
MAX_SYNTHESIS_QUEUE_SIZE=10
